<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <template id="website_help_desk_template" name="helpdesk">
        <t t-call="website.layout">
            <div class="container">
                <h1 align="center">Create Ticket</h1>

                <form class="form" method="post" id="employee_ticket_form"
                      action="/create/ticket">
                    <div class="row">
                        <div class="col">
                            <label for="employee_ids">
                                Name
                            </label>
<!--                            <input class="form-control"-->
<!--                                   required="1">-->
<!--                                    <t t-esc="request.env.user.name"/>-->
<!--                            </input>-->
                            <select id="employee_ids" name="employee"
                                    class="form-control">
                                <t t-foreach="employee_ids" t-as="employee">
                                    <option t-att-value="employee.id">
                                        <t t-esc="employee.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                        <div class="col">
                            <label for="subject">
                                Subject
                            </label>

                            <input name="subject"
                                   class="form-control"
                                   required="1"
                                   id="subject"
                                   rows="3"
                                    placeholder='Whats your Problem'>
                            </input>
                        </div>
                    </div>

                    <div class="form-group" style="margin-top:10px"
                         align="center">
                        <button type="submit" class="btn btn-outline-success">
                            SUBMIT
                        </button>
                    </div>
                </form>

            </div>
        </t>
    </template>
<!--    success template    -->
    <template id="employee_ticket_success_template" name="Success">
        <t t-call="website.layout">
            <div class="container">
                <div class="alert alert-success">
                    <span>Successfully Created Ticket</span>
                </div>

                <div class="card-footer">
                    <a t-attf-href="/helpdesk" class="btn btn-primary btn-lg">Go
                        Back
                    </a>
                </div>
            </div>
        </t>
    </template>

</odoo>