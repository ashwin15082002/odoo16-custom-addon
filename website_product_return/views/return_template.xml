<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="website_product_return" name="return">
        <t t-call="website.layout">
            <div class="container">
                <form id="sale_return_form">
                    <table  class="table">
                        <thead style="font-size:25px">
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Return Quantity</th>
                            </tr>
                        </thead>
                        <tbody class="table table-striped" style="font-size:15px">
                            <t t-foreach="orderLines" t-as="line"><t t-log="line"/>
                                <tr t-if="line.product_id.type != 'service'">
                                    <td><span t-field="line.name"/></td>
                                    <td><span t-esc="line.product_uom_qty"/></td>
                                    <td><input/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                </form>
            </div>
        </t>
    </template>
</odoo>