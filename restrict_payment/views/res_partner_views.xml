<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id="res_partner_view" model="ir.ui.view">
            <field name="name">res.partner.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@name='banks']"
                       position="after">
                    <group string="Restrict Payment">
                        <group>
                            <field name="active_restrict"/>
                            <field name="providers" widget="many2many_tags"
                                   attrs="{'invisible': [('active_restrict','=',False )]}"/>
                            <field name="min_amount"
                                   attrs="{'invisible': [('active_restrict','=',False )]}"/>
                            <field name="max_amount"
                                   attrs="{'invisible': [('active_restrict','=',False )]}"/>
                        </group>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>