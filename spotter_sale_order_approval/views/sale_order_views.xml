<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <record id="sale_order_view" model="ir.ui.view">
            <field name="name">sale.order.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_quotation_send']"
                       position="after">
                    <button name="action_approve" string="Approve 1"
                            type="object"
                            states="draft"/>

                    <button name="action_approve_2" string="Approve 2"
                            type="object"
                            states="waiting"/>
                    <field name="amt_greater"/>
                </xpath>

                <xpath expr="//button[@name='action_confirm'][1]"
                       position="attributes">
                    <attribute name="attrs">{'invisible':
                        [('amt_greater','=',True)]}
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm'][2]"
                       position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>